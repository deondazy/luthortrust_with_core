{
    "name": "deondazy/core",
    "description": "The Denosys Core PHP MVC Framework",
    "type": "project",
    "keywords": ["framework", "deondazy", "core", "mvc"],
    "license": "MIT",
    "authors": [
        {
            "name": "Deon Okonkwo",
            "email": "deondazy@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-curl": "*",
        "ext-sodium": "*",
        "doctrine/dbal": "^3.6",
        "doctrine/migrations": "^3.6",
        "doctrine/orm": "^2.15",
        "doctrine/sql-formatter": "^1.1",
        "filp/whoops": "^2.14",
        "league/flysystem": "^3.0",
        "league/flysystem-aws-s3-v3": "^3.0",
        "monolog/monolog": "^3.4",
        "nesbot/carbon": "^2.71",
        "php-di/slim-bridge": "^3.3",
        "ramsey/uuid": "^4.7",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.11",
        "slim/twig-view": "^3.3",
        "symfony/cache": "^6.3",
        "symfony/mime": "^7.0",
        "symfony/security-core": "^6.3",
        "symfony/string": "^6.3",
        "symfony/yaml": "^6.1",
        "vlucas/phpdotenv": "^5.5",
        "vlucas/valitron": "^1.4",
        "zeuxisoo/slim-whoops": "^0.7.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^1.23",
        "symfony/var-dumper": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "Denosys\\App\\": "app/",
            "Denosys\\Core\\": "src/"
        },
        "files": [
            "src/Support/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Denosys\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test-php": "./vendor/bin/pest --coverage-clover coverage.xml",
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
